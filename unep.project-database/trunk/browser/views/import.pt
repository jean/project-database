<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="unep">

<metal:block metal:fill-slot="top_slot"
             tal:define="dummy python:request.set('disable_border',1)" />
             
<body>

<metal:fill fill-slot="main">

    <h2>Import contacts from CSV</h2>
    <div class="formHelp">
        <p>Please be patient.</p>
    </div>  

    <form name="form" action="." method="post" enctype="multipart/form-data"
        tal:attributes="action here/upfront_contacts_tool/absolute_url">

        <div class="field">
        <div>Select file</div>

            <input type="file" name="csv_file" size="50" />
        </div>
            
            
        <input class="context" type="submit" value="Next"
               name="uploadCSVFile:method" />

        <input type="hidden" name="current_url"
               value="http://localhost:8080/unep/contacts">

    </form>


  <h2>Import Projects and associated PGI's from CSV</h2>
  <div class="formHelp">
      <p>Please be patient.</p>
  </div>  

  <form tal:attributes="action string:${portal_url}/@@unep.import-projects-action"
        tal:define="errors options/errors|nothing"
        method="post"
        enctype="multipart/form-data">
        
    <div class="field"
         tal:define="error errors/csvfile| nothing"
         tal:attributes="class python:error and 'field error' or 'field'">
         
      <label for="csvfile">CSV file</label>

      <span class="fieldRequired" title="Required"
            i18n:attributes="title title_required;"
            i18n:translate="label_required">(Required)</span>

      <div tal:content="error">Validation error output</div>

      <input type="file"
             name="csvfile"
             size="50"                
             tal:attributes="tabindex tabindex/next"/>
      <br/>
      <input type="radio"
             value='1'
             name="debug"
             checked
             tal:attributes="tabindex tabindex/next"/>
      No feedback <br/>

      <input type="radio"
             value='2'
             name="debug"
             tal:attributes="tabindex tabindex/next"/>
      Some feedback <br/>

      <input type="radio"
             title='All feedback'
             value='3'
             name="debug"
             tal:attributes="tabindex tabindex/next"/>
      All feedback <br/>
    </div>

    <input class="context"
           type="submit"
           name="import"
           value="Import"/>
  </form>

