<?xml version="1.0"?>

<object name="portal_skins"
        meta_type="Plone Skins Tool"
        allow_any="False"
        cookie_persistence="False"
        request_varname="plone_skin">

 <object name="projectdatabase_images"
         meta_type="Filesystem Directory View"
         directory="ProjectDatabase/skins/projectdatabase_images"/>
 <object name="projectdatabase_templates"
         meta_type="Filesystem Directory View"
         directory="ProjectDatabase/skins/projectdatabase_templates"/>
 <object name="projectdatabase_styles"
         meta_type="Filesystem Directory View"
         directory="ProjectDatabase/skins/projectdatabase_styles"/>
 
 <skin-path name="Plone Default">
  <layer insert-after="custom" 
         name="projectdatabase_images"/>
  <layer insert-after="custom" 
         name="projectdatabase_templates"/>
  <layer insert-after="custom" 
         name="projectdatabase_styles"/>
 </skin-path>

</object>