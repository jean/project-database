<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="UNEP Theme">

 <object name="unep_theme_custom_images"
    meta_type="Filesystem Directory View"
    directory="unep.theme:skins/unep_theme_custom_images"/>
 <object name="unep_theme_custom_templates"
    meta_type="Filesystem Directory View"
    directory="unep.theme:skins/unep_theme_custom_templates"/>
 <object name="unep_theme_styles"
    meta_type="Filesystem Directory View"
    directory="unep.theme:skins/unep_theme_styles"/>

 <skin-path name="UNEP Theme" based-on="Plone Default">
  <layer name="unep_theme_custom_images"
     insert-after="custom"/>
  <layer name="unep_theme_custom_templates"
     insert-after="unep_theme_custom_images"/>
  <layer name="unep_theme_styles"
     insert-after="unep_theme_custom_templates"/>
 </skin-path>

</object>
